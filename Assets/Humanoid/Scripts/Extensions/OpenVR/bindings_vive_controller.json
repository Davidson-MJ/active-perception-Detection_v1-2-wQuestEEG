{
	"app_key": "application.generated.unity.steamvr.exe",
	"bindings": {
		"/actions/default": {
			"chords": [],
			"haptics": [
				{
					"output": "/actions/default/out/lefthaptic",
					"path": "/user/hand/left/output/haptic"
				},
				{
					"output": "/actions/default/out/righthaptic",
					"path": "/user/hand/right/output/haptic"
				}
			],
			"poses": [
				{
					"output": "/actions/default/in/pose",
					"path": "/user/hand/left/pose/raw"
				},
				{
					"output": "/actions/default/in/pose",
					"path": "/user/hand/right/pose/raw"
				}
			],
			"skeleton": [
				{
					"output": "/actions/default/in/skeletonlefthand",
					"path": "/user/hand/left/input/skeleton/left"
				},
				{
					"output": "/actions/default/in/skeletonrighthand",
					"path": "/user/hand/right/input/skeleton/right"
				}
			],
			"sources": [

				// ----- Left

				{
					"inputs": {
						"touch": {
							"output": "/actions/default/in/LeftTouchpadTouch"
						},
						"click": {
							"output": "/actions/default/in/LeftTouchpadClick"
						},
						"position": {
							"output": "/actions/default/in/LeftTouchpad"
						}
					},
					"mode": "trackpad",
					"path": "/user/hand/left/input/trackpad"
				},

				{
					"inputs": {
						"touch": {
							"output": "/actions/default/in/LeftTriggerTouch"
						},
						"pull": {
							"output": "/actions/default/in/LeftTrigger"
						}
					},
					"mode": "trigger",
					"path": "/user/hand/left/input/trigger"
				},

				{
					"path": "/user/hand/left/input/grip",
					"mode": "button",
					"inputs": {
						"click": {
							"output": "/actions/default/in/LeftGripClick"
						}
					}
				},

				{
					"inputs": {
						"click": {
							"output": "/actions/default/in/LeftButtonA"
						}
					},
					"mode": "button",
					"path": "/user/hand/left/input/application_menu"
				},


				// ----- Right

				{
					"inputs": {
						"touch": {
							"output": "/actions/default/in/RightTouchpadTouch"
						},
						"click": {
							"output": "/actions/default/in/RightTouchpadClick"
						},
						"position": {
							"output": "/actions/default/in/RightTouchpad"
						}
					},
					"mode": "trackpad",
					"path": "/user/hand/right/input/trackpad"
				},

				{
					"inputs": {
						"touch": {
							"output": "/actions/default/in/RightTriggerTouch"
						},
						"pull": {
							"output": "/actions/default/in/RightTrigger"
						}
					},
					"mode": "trigger",
					"path": "/user/hand/right/input/trigger"
				},

				{
					"inputs": {
						"click": {
							"output": "/actions/default/in/RightGripClick"
						}
					},
					"mode": "button",
					"path": "/user/hand/right/input/grip"
				},

				{
					"inputs": {
						"click": {
							"output": "/actions/default/in/RightButtonA"
						}
					},
					"mode": "button",
					"path": "/user/hand/right/input/application_menu"
				}

			]
		}
	},
	"controller_type": "vive_controller",
	"description": "",
	"name": "vive_controller"
}
